{
  "name": "styled-system-workshop",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "mdx-deck deck.mdx",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint ."
  },
  "dependencies": {
    "grid-styled": "5.0.2",
    "mdx-deck": "3.0.0",
    "mdx-deck-code-surfer": "0.4.1",
    "raw-loader": "0.5.1",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-live": "1.11.0",
    "react-syntax-highlighter": "8.0.1",
    "recompose": "0.30.0",
    "styled-components": "3.4.5",
    "styled-system": "3.0.2",
    "system-components": "3.0.0"
  },
  "devDependencies": {
    "eslint": "5.5.0",
    "eslint-plugin-react": "7.11.1",
    "stylelint": "9.5.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.3.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "rules": {}
  },
  "eslintIgnore": [
    "code-samples"
  ],
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
